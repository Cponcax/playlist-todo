<p id="notice"><%= notice %></p>

<h1 class="title is-1">Listing Playlists </h1>
<h2 class="subtitle">by Havas</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @playlists.each do |playlist| %>
      <tr>
        <td><%= playlist.name %></td>
        <td><%= playlist.date %></td>
        <td><%= link_to 'Show', playlist,class:"button is-success" %></td>
        <td><%= link_to 'Edit', edit_playlist_path(playlist) ,class:"button is-primary"%></td>
        <td><%= link_to 'Destroy', playlist, method: :delete, class:"button is-danger", data: { confirm: 'Are you sure?'}%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Playlist', new_playlist_path,class:"button is-primary" %>
